<?xml version="1.0" encoding="UTF-8"?>
<project name="ant" default="all">
    <dirname property="module.ant.basedir" file="${ant.file}"/>
    <property name="ant.output.dir" value="${module.ant.basedir}/out"/>
    <property name="ant.tmp.dir" value="/tmp/anttest"/>

    <property name="compiler.args.ant" value="-encoding UTF-8 -source 1.8 -target 1.8"/>

    <target name="clean" description="cleanup all">
        <echo>Target: clean</echo>
        <delete dir="${ant.output.dir}"/>
        <delete dir="${ant.tmp.dir}"/>
    </target>

    <target name="get" depends="clean" description="build all modules">
        <echo>Target: get</echo>
        <mkdir dir="${ant.tmp.dir}"/>
        <copy todir="${ant.tmp.dir}">
            <fileset dir="src"/>
            <fileset dir="test"/>
        </copy>
    </target>

    <target name="compile" depends="get" description="build all">
        <mkdir dir="${ant.output.dir}/class"/>
        <javac destdir="${ant.output.dir}/class" debug="on" nowarn="off">
            <classpath>
                <pathelement location="/Applications/IntelliJ IDEA.app/Contents/lib/hamcrest-core-1.3.jar"/>
                <pathelement location="${ant.output.dir}/class"/>
                <pathelement location="/Applications/IntelliJ IDEA.app/Contents/lib/junit-4.12.jar"/>
            </classpath>
            <compilerarg line="${compiler.args.ant}"/>
            <src path="${ant.tmp.dir}"/>
        </javac>
    </target>

    <target name="jar" depends="compile" description="build all">
        <echo>Target: jar</echo>
        <jar destfile="${ant.output.dir}/jar/app.jar" basedir="${ant.output.dir}/class">
            <manifest>
                <attribute name="Main-Class"
                           value="AntTest"/>
            </manifest>
        </jar>
    </target>

    <target name="test" depends="jar" description="build all">
        <echo>Target: test</echo>
        <junit>
            <test name="swt.ant.AntTestTest"/>
            <classpath>
                <pathelement location="/Applications/IntelliJ IDEA.app/Contents/lib/hamcrest-core-1.3.jar"/>
                <pathelement location="${ant.output.dir}/class"/>
                <pathelement location="/Applications/IntelliJ IDEA.app/Contents/lib/junit-4.12.jar"/>
            </classpath>
            <formatter type="plain" usefile="false"/>
        </junit>
    </target>

    <target name="run" depends="test" description="build all">
        <echo>Target: run</echo>
    </target>

    <target name="doc" depends="jar" description="build all">
        <echo>Target: doc</echo>
    </target>

    <target name="all" depends="doc">
        <echo>Target: all</echo>
    </target>
</project>