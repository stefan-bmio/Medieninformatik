<?xml version="1.0" encoding="UTF-8"?>
<project name="ant" default="all">


    <property file="ant.properties"/>
    <!-- Uncomment the following property if no tests compilation is needed -->
    <!--
    <property name="skip.tests" value="true"/>
     -->

    <!-- Compiler options -->

    <property name="compiler.debug" value="on"/>
    <property name="compiler.generate.no.warnings" value="off"/>
    <property name="compiler.args" value=""/>
    <property name="compiler.max.memory" value="700m"/>
    <patternset id="ignored.files">
        <exclude name="**/*.hprof/**"/>
        <exclude name="**/*.pyc/**"/>
        <exclude name="**/*.pyo/**"/>
        <exclude name="**/*.rbc/**"/>
        <exclude name="**/*.yarb/**"/>
        <exclude name="**/*~/**"/>
        <exclude name="**/.DS_Store/**"/>
        <exclude name="**/.git/**"/>
        <exclude name="**/.hg/**"/>
        <exclude name="**/.svn/**"/>
        <exclude name="**/CVS/**"/>
        <exclude name="**/__pycache__/**"/>
        <exclude name="**/_svn/**"/>
        <exclude name="**/vssver.scc/**"/>
        <exclude name="**/vssver2.scc/**"/>
    </patternset>
    <patternset id="library.patterns">
        <include name="*.egg"/>
        <include name="*.jar"/>
        <include name="*.ear"/>
        <include name="*.swc"/>
        <include name="*.war"/>
        <include name="*.ane"/>
        <include name="*.zip"/>
    </patternset>
    <patternset id="compiler.resources">
        <exclude name="**/?*.java"/>
        <exclude name="**/?*.form"/>
        <exclude name="**/?*.class"/>
        <exclude name="**/?*.groovy"/>
        <exclude name="**/?*.scala"/>
        <exclude name="**/?*.flex"/>
        <exclude name="**/?*.kt"/>
        <exclude name="**/?*.clj"/>
        <exclude name="**/?*.aj"/>
    </patternset>

    <!-- Modules -->


    <!-- Module ant -->

    <dirname property="module.ant.basedir" file="${ant.file}"/>



    <property name="compiler.args.ant" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>

    <property name="ant.output.dir" value="${module.ant.basedir}/out/production/ant"/>
    <property name="ant.testoutput.dir" value="${module.ant.basedir}/out/test/ant"/>

    <path id="ant.module.bootclasspath">
        <!-- Paths to be included in compilation bootclasspath -->
    </path>

    <path id="ant.module.production.classpath"/>

    <path id="ant.runtime.production.module.classpath">
        <pathelement location="${ant.output.dir}"/>
    </path>

    <path id="ant.module.classpath">
        <pathelement location="${ant.output.dir}"/>
    </path>

    <path id="ant.runtime.module.classpath">
        <pathelement location="${ant.testoutput.dir}"/>
        <pathelement location="${ant.output.dir}"/>
    </path>


    <patternset id="excluded.from.module.ant">
        <patternset refid="ignored.files"/>
    </patternset>

    <patternset id="excluded.from.compilation.ant">
        <patternset refid="excluded.from.module.ant"/>
    </patternset>

    <path id="ant.module.sourcepath">
        <dirset dir="${module.ant.basedir}">
            <include name="src"/>
        </dirset>
    </path>


    <target name="compile.module.ant" depends="compile.module.ant.production,compile.module.ant.tests" description="Compile module ant"/>

    <target name="compile.module.ant.production" description="Compile module ant; production classes">
        <mkdir dir="${ant.output.dir}"/>
        <javac destdir="${ant.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true">
            <compilerarg line="${compiler.args.ant}"/>
            <bootclasspath refid="ant.module.bootclasspath"/>
            <classpath refid="ant.module.production.classpath"/>
            <src refid="ant.module.sourcepath"/>
            <patternset refid="excluded.from.compilation.ant"/>
        </javac>

        <copy todir="${ant.output.dir}">
            <fileset dir="${module.ant.basedir}/src">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="compile.module.ant.tests" depends="compile.module.ant.production" description="compile module ant; test classes" unless="skip.tests"/>

    <target name="clean.module.ant" description="cleanup module">
        <delete dir="${ant.output.dir}"/>
        <delete dir="${ant.testoutput.dir}"/>
    </target>

    <target name="init" description="Build initialization">
        <!-- Perform any build initialization in this target -->
    </target>

    <target name="clean" depends="clean.module.ant" description="cleanup all"/>

    <target name="build.modules" depends="init, clean, compile.module.ant" description="build all modules"/>

    <target name="all" depends="build.modules" description="build all"/>
</project>